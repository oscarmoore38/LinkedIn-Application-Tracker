@page
@model linkedInApplicationTracker.Pages.UpdateApplication
@{
}
<div class="text-center">
    <h5 class="display-4">@ViewData["Title"]</h5>
</div>
<form method="post" asp-page-handler="Update">
    <input type="hidden" name="id" value="@Model.ApplicationToUpdate?.ApplicationID" />
    <input type="hidden" asp-for="ApplicationToUpdate.UserID" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <!-- Date Field with Popup Calendar -->
    <div class="form-group">
        <label asp-for="ApplicationToUpdate.Date" class="control-label"></label>
        <input asp-for="ApplicationToUpdate.Date" class="form-control" type="date" value="@(Model.ApplicationToUpdate != null ? Model.ApplicationToUpdate.Date.ToString("yyyy-MM-dd") : string.Empty)" />
        <span asp-validation-for="ApplicationToUpdate.Date" class="text-danger"></span>
    </div>

    <!-- Title Field -->
    <div class="form-group">
        <label asp-for="ApplicationToUpdate.Title" class="control-label"></label>
        <input asp-for="ApplicationToUpdate.Title" class="form-control" value="@(Model.ApplicationToUpdate != null ? Model.ApplicationToUpdate.Title : string.Empty)"/>
        <span asp-validation-for="ApplicationToUpdate.Title" class="text-danger"></span>
    </div>

    <!-- Company Field -->
    <div class="form-group">
        <label asp-for="ApplicationToUpdate.Company" class="control-label"></label>
        <input asp-for="ApplicationToUpdate.Company" class="form-control" value="@(Model.ApplicationToUpdate != null ? Model.ApplicationToUpdate.Company : string.Empty)"/>
        <span asp-validation-for="ApplicationToUpdate.Company" class="text-danger"></span>
    </div>

    <!-- URL to Posting Field -->
    <div class="form-group">
        <label asp-for="ApplicationToUpdate.ApplicationURL" class="control-label"></label>
        <input asp-for="ApplicationToUpdate.ApplicationURL" class="form-control" value="@(Model.ApplicationToUpdate != null ? Model.ApplicationToUpdate.ApplicationURL : string.Empty)" />
        <span asp-validation-for="ApplicationToUpdate.ApplicationURL" class="text-danger"></span>
    </div>

    <!-- Outcome Dropdown Field -->
    <div class="form-group">
        <label asp-for="ApplicationToUpdate.Outcome" class="control-label"></label>
        <select asp-for="ApplicationToUpdate.Outcome" class="form-control">
            <option value="Applied">Applied</option>
            <option value="Interviewing">Interviewing</option>
            <option value="Rejected">Rejected</option>
            <option value="Offer">Offer</option>
            <option value="Accepted">Accepted</option>
        </select>
        <span asp-validation-for="ApplicationToUpdate.Outcome" class="text-danger"></span>
    </div>
    <div class="d-flex gap-2" style="margin-top: 20px;">
    <!-- Submit Button -->
    <button type="submit" class="btn btn-success">Update</button>
    </form>
    <form method="post" asp-page-handler="Cancel">
        <button class="btn btn-danger"> Cancel </button>
        </form>
    </div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}